<% book_comments.each do |book_comment| %>
  <% unless book_comment.id.nil? %>
    <li class="comment-container">
      <div class="comment-box d-flex align-items-center">
        <div class="comment-avatar">
          <%= link_to user_path(book_comment.user) do %>
            <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= book_comment.user.name %><br>
          <% end %>
        </div>
        <div class="comment-text">
          <%= book_comment.comment %>
          <% if book_comment.user == current_user %>
            <%= link_to 'Destroy', book_book_comments_path(book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
<% end %>